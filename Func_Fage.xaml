<Window x:Class="CarInfoClient.Func_Fage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarInfoClient"
        mc:Ignorable="d"
        Title="Func_Fage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.2*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Label Content="에어컨" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="헤드라이트" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Center"/>
        <Label Content="온도/센서" Grid.Column="5" Grid.Row="2" HorizontalAlignment="Center"/>
        <Label Content="지도" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Center"/>
        <Label Content="검색/경로" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Center"/>
        <Label Content="미디어" Grid.Column="5" Grid.Row="5" HorizontalAlignment="Center"/>
        <Button x:Name="air_btn" Grid.Column="1" Grid.Row="1"  BorderBrush="{x:Null}" Click="air_btn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/aircondition.png"/>
            </Button.Background>

        </Button>

        <Button x:Name="headLight" Grid.Column="3" Grid.Row="1"  BorderBrush="{x:Null}" Click="headLight_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/headlight.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="temperature_btn" Grid.Column="5" Grid.Row="1"  BorderBrush="{x:Null}" Click="temperature_btn_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/temperature.png"/>
            </Button.Background>


        </Button>
        <Button x:Name="Map_btn" Grid.Column="1" Grid.Row="4"  BorderBrush="{x:Null}" Click="Map_btn_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/map.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="route_btn" Grid.Column="3" Grid.Row="4"  BorderBrush="{x:Null}" Click="route_btn_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/route.png"/>
            </Button.Background>

        </Button>
        <Button x:Name="Media_btn" Grid.Column="5" Grid.Row="4"  BorderBrush="{x:Null}" Click="Media_btn_Click" >
            <Button.Background>
                <ImageBrush ImageSource="/media.png"/>
            </Button.Background>

        </Button>
        <Button Grid.Column="6" Content="사용자 로그아웃" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="112" Background="{x:Null}" BorderBrush="{x:Null}"/>
    </Grid>
</Window>
